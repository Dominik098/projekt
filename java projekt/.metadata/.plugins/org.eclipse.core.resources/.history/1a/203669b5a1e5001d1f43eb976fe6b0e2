package com.uniquedevelopr.registration;


import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;


import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/dodaj")
public class DodajKsiazke extends HttpServlet {

    private static final long serialVersionUID = 1L;
    
    // ustawienia połączenia z bazą danych
    private final String JDBC_DRIVER = "com.mysql.jdbc.Driver";
    private final String DB_URL = "jdbc:mysql://localhost:3306/Biblioteka";
    private final String USER = "root";
    private final String PASS = "P@ssw0rd";
    
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        
        // odczytanie danych z formularza
        String tytuł = request.getParameter("tytuł");
        String autor = request.getParameter("autor");
        String wydawnictwo = request.getParameter("wydawnictwo");
        String data_publikacji = request.getParameter("data_publikacji");
        String pdf = request.getParameter("pdf");
       
        
     
        // zapisanie danych do bazy danych
        Connection conn = null;
        PreparedStatement stmt = null;
        try {
            Class.forName(JDBC_DRIVER);
            conn = DriverManager.getConnection(DB_URL, USER, PASS);
            String sql = "INSERT INTO Książki (tytuł, autor, wydawnictwo, data_publikacji, pdf) VALUES (?, ?, ?, ?, ?)";
            stmt = conn.prepareStatement(sql);
            stmt.setString(1, tytuł);
            stmt.setString(2, autor);
            stmt.setString(3, wydawnictwo);
            stmt.setString(4, data_publikacji);
            stmt.setString(5, pdf);
            stmt.executeUpdate();
        } catch (ClassNotFoundException | SQLException e) {
            e.printStackTrace();
        } finally {
            try {
                if (stmt != null) {
                    stmt.close();
                }
                if (conn != null) {
                    conn.close();
                }
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
        
     // wyświetlenie potwierdzenia rezerwacji
        response.setContentType("text/html; charset=UTF-8");
        PrintWriter out = response.getWriter();
        out.println("<html><body>");
        out.println("<h2>Twoja rezerwacja została zapisana.</h2>");
        out.println("<p>tytuł" + tytuł + "</p>");
        out.println("<p>autor " + autor + "</p>");
        out.println("<p> wydawnictwo: " + wydawnictwo + "</p>");
        out.println("<p>Data " + data_publikacji + "</p>");
        out.println("<p>PDF " + pdf+ "</p>");
        out.println("</body></html>");
        
    }

}