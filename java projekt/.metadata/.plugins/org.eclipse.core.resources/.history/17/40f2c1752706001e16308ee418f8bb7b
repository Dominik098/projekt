package com.uniquedevelopr.registration;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

/**
 * Servlet implementation class Logout
 */
@WebServlet("/logout")
public class Logout extends HttpServlet {
    private static final long serialVersionUID = 1L;
       
    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String confirmLogout = request.getParameter("confirm");

        if (confirmLogout != null && confirmLogout.equals("true")) {
            HttpSession session = request.getSession();
            session.invalidate();
            response.sendRedirect("G_login.jsp");
        } else {
            // Wyświetl okno dialogowe z potwierdzeniem wylogowania
            response.setContentType("text/html");
            response.getWriter().println("<html><body>");
            response.getWriter().println("<script>");
            response.getWriter().println("function promptForPassword() {");
            response.getWriter().println("   var password = '';");
            response.getWriter().println("   var passwordField = document.createElement('input');");
            response.getWriter().println("   passwordField.setAttribute('type', 'password');");
            response.getWriter().println("   var promptContainer = document.createElement('div');");
            response.getWriter().println("   // Dodaj style CSS dla promptContainer i innych elementów");
            response.getWriter().println("   // ...");

            // Tutaj dodaj resztę kodu JavaScript dla okna dialogowego, podobnego do tego, które podałeś

            response.getWriter().println("   okButton.addEventListener('click', function() {");
            response.getWriter().println("      // Przekieruj na stronę wylogowania");
            response.getWriter().println("      window.location.href = '/logout?confirm=true';");
            response.getWriter().println("   });");

            response.getWriter().println("}");
            response.getWriter().println("promptForPassword();");
            response.getWriter().println("</script>");
            response.getWriter().println("</body></html>");
        }
    }
}
