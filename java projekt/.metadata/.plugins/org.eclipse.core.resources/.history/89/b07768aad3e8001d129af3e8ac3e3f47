

package com.uniquedevelopr.registration;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/rezerwacja")
public class RezerwacjaServlet extends HttpServlet {

    private static final long serialVersionUID = 1L;
    
    // ustawienia połączenia z bazą danych
    private final String JDBC_DRIVER = "com.mysql.jdbc.Driver";
    private final String DB_URL = "jdbc:mysql://localhost:3306/moja";
    private final String USER = "root";
    private final String PASS = "P@ssw0rd";
    
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        
        // odczytanie danych z formularza
        String tytul = request.getParameter("tytul");
        String autor = request.getParameter("autor");
        String wydawnictwo = request.getParameter("wydawnictwo");
        String data_publikacji = request.getParameter("data_publikacji");
        String pdf_link = request.getParameter("pdf");
      
        
  
        try {
           
        } catch (Exception e) {
            e.printStackTrace();
        }
        
        // zapisanie danych do bazy danych
        Connection conn = null;
        PreparedStatement stmt = null;
        try {
            Class.forName(JDBC_DRIVER);
            conn = DriverManager.getConnection(DB_URL, USER, PASS);
            String sql = "INSERT INTO dane (tytul, autor, wydawnictwo, data_publikacji, pdf_link) VALUES (?, ?, ?, ?, ?)";
            stmt = conn.prepareStatement(sql);
            stmt.setString(1, tytul);
            stmt.setString(2, autor);
            stmt.setString(3, wydawnictwo);
            stmt.setString(4, data_publikacji);
            stmt.setString(5,pdf_link);
            stmt.executeUpdate();
        } catch (ClassNotFoundException | SQLException e) {
            e.printStackTrace();
        } finally {
            try {
                if (stmt != null) {
                    stmt.close();
                }
                if (conn != null) {
                    conn.close();
                }
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
        
        // wyświetlenie potwierdzenia rezerwacji
        response.setContentType("text/html; charset=UTF-8");
        PrintWriter out = response.getWriter();
        out.println("<html><body>");
        out.println("<h2>Twoja rezerwacja została zapisana.</h2>");
        out.println("<p>tytuł: " + tytul + "</p>");
        out.println("<p>autor: " + autor + "</p>");
        out.println("<p>wydawnictwo: " + wydawnictwo + "</p>");
        out.println("<p>data_publikacji: " + data_publikacji + "</p>");
        out.println("<p>pdf_link " + pdf_link + "</p>");
        out.println("</body></html>");
        
    }

}