package com.uniquedevelopr.registration;
import javax.swing.JOptionPane;
public class LoginPanel {
	

	public class Main {
	   public static void main(String[] args) {
	      String login = "przykladowy_login";
	      String haslo = "przykladowe_haslo";
	      String wpisanyLogin = JOptionPane.showInputDialog("Podaj login:");
	      String wpisaneHaslo = JOptionPane.showInputDialog("Podaj hasło:");
	      
	      if (login.equals(wpisanyLogin) && haslo.equals(wpisaneHaslo)) {
	         JOptionPane.showMessageDialog(null, "Zalogowano pomyślnie!");
	      } else {
	         JOptionPane.showMessageDialog(null, "Niepoprawny login lub hasło!");
	      }
	   }
	}

}
