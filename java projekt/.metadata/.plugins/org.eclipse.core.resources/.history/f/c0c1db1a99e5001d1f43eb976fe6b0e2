package com.uniquedevelopr.registration;


import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/dodaj")
public class DodajKsiazke extends HttpServlet {

    private static final long serialVersionUID = 1L;
    
    // ustawienia połączenia z bazą danych
    private final String JDBC_DRIVER = "com.mysql.jdbc.Driver";
    private final String DB_URL = "jdbc:mysql://localhost:3306/Biblioteka";
    private final String USER = "root";
    private final String PASS = "P@ssw0rd";
    
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        
        // odczytanie danych z formularza
        String tytuł = request.getParameter("tytuł");
        String autor = request.getParameter("autor");
        String phone = request.getParameter("phone");
        String car = request.getParameter("car");
        String date = request.getParameter("date");
       
        
     
        // zapisanie danych do bazy danych
        Connection conn = null;
        PreparedStatement stmt = null;
        try {
            Class.forName(JDBC_DRIVER);
            conn = DriverManager.getConnection(DB_URL, USER, PASS);
            String sql = "INSERT INTO rezerwacje (imie_nazwisko, email, numer_telefonu, samochod, data_czas) VALUES (?, ?, ?, ?, ?)";
            stmt = conn.prepareStatement(sql);
            stmt.setString(1, tytuł);
            stmt.setString(2, autor);
            stmt.setString(3, phone);
            stmt.setString(4, car);
           
            stmt.executeUpdate();
        } catch (ClassNotFoundException | SQLException e) {
            e.printStackTrace();
        } finally {
            try {
                if (stmt != null) {
                    stmt.close();
                }
                if (conn != null) {
                    conn.close();
                }
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
        
        // wyświetlenie potwierdzenia rezerwacji
        response.setContentType("text/html; charset=UTF-8");
        PrintWriter out = response.getWriter();
        out.println("<html><body>");
        out.println("<h2>Twoja rezerwacja została zapisana.</h2>");
        out.println("<p>Imię i nazwisko: " + tytuł + "</p>");
        out.println("<p>Adres e-mail: " + autor + "</p>");
        out.println("<p>Numer telefonu: " + phone + "</p>");
        out.println("<p>Samochód: " + car + "</p>");
        out.println("<p>Data i czas odbioru: " + dateFormat.format(dateTime) + "</p>");
        out.println("</body></html>");
        
    }

}